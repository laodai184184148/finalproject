<%- include('partials/navigation.ejs')%>

<body>
  <div class="row">
    <div class="col-6 col-md-4">.col-6 .col-md-4</div>
    <div class="col-6 col-md-4" style=" margin-top: 100px;">
      <div class="row">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-12">
                <h4>Thông Tin Tài Khoản</h4>
                <hr>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <form action="/users/profile" method="POST" >
                  <div class="form-group row">
                    <label for="username" class="col-4 col-form-label">User Name</label>
                    <div class="col-8">
                      <input id="username" name="username" placeholder="Username" class="form-control here"
                        required="required"  value="<%=user.name%>">
                    </div>
                  </div>

                  <div class="form-group row">
                    <label for="select" class="col-4 col-form-label">Họ Và Tên</label>
                    <div class="col-8">
                      <input id="fullname" name="fullname" placeholder="fullname" class="form-control here"
                        required="required" value="<%=user.profile.fullname%>" type="text">
                 
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="select" class="col-4 col-form-label">Giới Tính</label>
                    <div class="col-8">
                      <select id="gender" class="gender" name="gender">
                        <option value="admin">Nam</option>
                        <option value="admin">Nữ</option>
                        <option value="admin">Khác</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="publicinfo" class="col-4 col-form-label">Mô Tả Cá Nhân</label>
                    <div class="col-8">
                      <input id="publicinfo" name="publicinfo"  value="<%=user.profile.des%>" class="form-control here"
                        type="text">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="phone" class="col-4 col-form-label">Số Điện Thoại</label>
                    <div class="col-8">
                      <input id="phone" name="phone"  value="<%=user.profile.phonenumber%>" class="form-control here"
                        type="text">
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class="offset-4 col-8">
                      <button name="submit" type="submit" class="btn btn-primary">Cập Nhập Tài Khoản</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-4">.col-6 .col-md-4</div>
  </div>
</body>